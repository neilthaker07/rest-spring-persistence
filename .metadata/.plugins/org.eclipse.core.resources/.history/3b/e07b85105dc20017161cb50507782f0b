package edu.sjsu.cmpe275.services;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import edu.sjsu.cmpe275.dao.IPlayerDao;
import edu.sjsu.cmpe275.rest.Player;

@Service
public class PlayerService {

	private Player p1 = null;
	//private PlayerDao playerDao;
	
	@Autowired
	private IPlayerDao iplayer;
	
	public Player getPlayer(long id) {
		//return new Player(1, "abc", "bhj", "qqq", "11111111111");
		
		return p1;
	}

	public void createPlayer(Player player) {
	//	playerDao.createPlayerDao(player);
		
		iplayer.save(player);
		
		//p1 = new Player(player.getId(),player.getFirstname(), player.getLastname(), player.getEmail(), player.getDescription());
	}
	
	
	public List<Player> getAllPlayers()
	{
		List<Player> players = new ArrayList<Player>();
		iplayer.findAll()
		.forEach(players::add);
		
		return players;
	}
	
}
